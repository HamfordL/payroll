{
  "name": "payroll",
  "version": "0.0.1",
  "description": "A payroll management system",
  "main": "index.js",
  "scripts": {
    "app": "cross-env NODE_ENV=development node -r esm src/index.js",
    "start-db": "docker-compose up -d",
    "setup-db": "npm run migrate && npm run seed",
    "migrate": "npx knex --esm --knexfile src/knexfile.js migrate:latest `echo $(cat src/db.env)`",
    "seed": "npx knex --esm --knexfile src/knexfile.js seed:run `echo $(cat src/db.env)`"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HamfordL/payroll.git"
  },
  "author": "Hamford Lam",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HamfordL/payroll/issues"
  },
  "homepage": "https://github.com/HamfordL/payroll#readme",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^8.29.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.20"
  },
  "dependencies": {
    "body-parser": "^1.20.1",
    "bookshelf": "^1.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "esm": "^3.2.25",
    "express": "^4.18.2",
    "knex": "^2.3.0",
    "pg": "^8.8.0",
    "swagger-ui-express": "^4.6.0"
  },
  "imports": {
    "@src": "./src"
  }
}
